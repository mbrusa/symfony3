{% extends "BlogBundle::layout.html.twig" %}

{% block content %}
    <div class="col-lg-6">

        <h2> Listado de Tags! </h2>
        <hr/>
        {%for message in app.session.flashbag().get('status') %}
            <div class="alert alert-success">{{message}}</div>
            <hr/>
        {%endfor%}
        <a href="{{path("blog_add_tag")}}" class="btn btn-success">Añadir etiqueta</a>
        <hr/>
        <table class="table table-bordered">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Eliminar</th>
            </tr>
            {%for tag in tags %}
                <tr>
                    <td>{{tag.name}}</td>
                    <td>{{tag.description}}</td>
                    <td><a href="{{path("blog_delete_tag",{id:tag.id})}}" class="btn btn-danger">X</a></td>
                </tr>
            {%endfor%}
        </table>
    </div>
    <div class="clearfix">
    </div>
{% endblock %}